<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#3a0942"
        android:layout_marginTop="10dp"
        android:padding="5dp">

        <Button
            android:id="@+id/btng"
            android:text="Test Galaxy"
            android:textColor="#FFFFFF"
            android:background="#50FFFFFF"
            android:layout_marginHorizontal="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <Button
            android:id="@+id/btns"
            android:text="Test Star"
            android:textColor="#FFFFFF"
            android:background="#50FFFFFF"
            android:layout_marginHorizontal="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/btnq"
            android:text="Test Quasar"
            android:textColor="#FFFFFF"
            android:background="#50FFFFFF"
            android:layout_marginHorizontal="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:text="J2000 Right Ascension"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et1"
                android:textColor="#000000"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="J2000 Declination"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et2"
                android:textColor="#000000"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Telescope U-band"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et3"
                android:textColor="#000000"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Telescope G-band"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et4"
                android:textColor="#000000"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Telescope R-band"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et5"
                android:textColor="#000000"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Telescope I-band"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et6"
                android:textColor="#000000"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Telescope Z-band"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et7"
                android:textColor="#000000"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Number of Runs"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et8"
                android:textColor="#000000"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Camera Column (Scanline)"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et9"
                android:textColor="#000000"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Field Number"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et10"
                android:textColor="#000000"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Final Redshift"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et11"
                android:textColor="#000000"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Plate Number"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et12"
                android:textColor="#000000"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Modified Julian Date (MJD)"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et13"
                android:textColor="#000000"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btnresult"
                android:src="@drawable/ic_arrow_forward_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>